<Window x:Class="FFM_WIFI.Views.UserHomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFM_WIFI.Views"
        mc:Ignorable="d"
        Title="UserHomeWindow" Height="700" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="324"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_FFM">
                    <MenuItem Header="Zur Anmeldung"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <TextBlock Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0"
                   FontSize="20" Height="26" Width="0">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}Hallo {0}!">
                    <Binding Path="User.UserName"/>
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>

        <GroupBox Header="Team wählen" Grid.Column="0" Grid.Row="1">
            <StackPanel>
                <Button Content="Neues Team" Command="{Binding NewTeamCommand}"
                        Margin="0,40,0,0" Height="20" Width="200"/>
                <DataGrid ItemsSource="{Binding UserTeamList}" SelectedItem="{Binding SelectedUserTeam}"
                          AutoGenerateColumns="False"
                          Margin="0,20,0,0" Height="150" Width="200">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding UserTeamName}" Header="Teamname" 
                                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Neues Spiel" Grid.Column="0" Grid.Row="2" Height="250" VerticalAlignment="Center">
            <StackPanel>
                <Button Content="Saison spielen" Command="{Binding GameCommand}"
                        Margin="0,40,0,0" Height="20" Width="200"/>
            </StackPanel>
        </GroupBox>

        <TextBlock Text="{Binding SelectedUserTeam.UserTeamName}"
                   Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" 
                   FontSize="20" Height="26" Width="0"/>

        <TextBlock Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"
                   FontSize="20" Height="27" Width="0">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0} - {1}">
                    <Binding Path="SelectedUserTeam.UserTeamLeague"/>
                    <Binding Path="SelectedUserTeam.UserTeamSeason"/>
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>

        <DataGrid ItemsSource="{Binding UserPlayerList}"
                  Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                  AutoGenerateColumns="False" Height="250">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Pos"
                                    Width="70" Binding="{Binding PlayerPosition}"/>
                <DataGridTemplateColumn Header="Spielername" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} {1}">
                                        <Binding Path="PlayerFirstName" />
                                        <Binding Path="PlayerLastName" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            
        </DataGrid>

        <GroupBox Header="Teamoptionen" Grid.Column="1" Grid.Row="2" Height="250" VerticalAlignment="Center">
            <StackPanel>
                <Button Content="Team draften" Command="{Binding DraftCommand}"
                        Margin="0,40,0,0" Height="20" Width="200"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
