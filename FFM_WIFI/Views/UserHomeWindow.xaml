<Window x:Class="FFM_WIFI.Views.UserHomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFM_WIFI.Views"
        mc:Ignorable="d"
        Title="UserHomeWindow" Height="700" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="149*"/>
            <RowDefinition Height="436*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_FFM">
                    <MenuItem Header="Zur Anmeldung"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <TextBlock Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0" FontSize="20">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}Hallo {0}!">
                    <Binding Path="User1.UserName"/>
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <Label Content="Statistiken"
                       Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="20" Height="37" Width="100"/>
        <GroupBox Header="Neues Spiel" Grid.Column="0" Grid.Row="1" Height="250" VerticalAlignment="Top" Margin="0,0,0,0">
            <StackPanel>
                <Label Content="Liga:" 
                           HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Margin="0,10,0,0"/>
                <ComboBox ItemsSource="{Binding LeagueList}" SelectedItem="{Binding SelectedLeague}" 
                          HorizontalAlignment="Center" Margin="0,0,0,0" Width="200" VerticalAlignment="Top">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding LeagueName}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Label Content="Saison:" 
                           HorizontalAlignment="Center" VerticalAlignment="Top" Width="200"/>
                <ComboBox ItemsSource="{Binding SeasonList}" SelectedItem="{Binding SelectedSeason}"
                          HorizontalAlignment="Center" Margin="0,0,0,0" Width="200" VerticalAlignment="Top">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding SeasonName}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button Content="Gegen KI" Command="{Binding LoginCommand}"
                        Margin="0,40,0,0" Height="20" Width="200"/>
                <Button Content="Gegen anderen Spieler" Command="{Binding LoginCommand}"
                        Margin="0,10,0,0" Height="20" Width="200"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Datenbank" Grid.Column="0" Grid.Row="1" Height="150" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <StackPanel>
                <Button Content="Bearbeiten" Command="{Binding EditDBCommand}"
                        Margin="0,40,0,0" Height="20" Width="200"/>
                <Button Content="Erweitern"
                        Margin="0,10,0,0" Height="20" Width="200"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
