<Window x:Class="FFM_WIFI.Views.GameHomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFM_WIFI.Views"
        mc:Ignorable="d"
        Title="GameWindow" Height="800" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="140"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,0,0,0" FontSize="20">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}&#x0a;Punkte Team: ">
                        <Binding Path="UserTeam.UserTeamName"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>

            <Canvas Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Height="600" Width="400" 
                    Background="LightGreen">
                <Line X1="0" Y1="300" X2="400" Y2="300" Stroke="White" StrokeThickness="8"/>
                <Line X1="100" Y1="0" X2="100" Y2="100" Stroke="White" StrokeThickness="8"/>
                <Line X1="300" Y1="0" X2="300" Y2="100" Stroke="White" StrokeThickness="8"/>
                <Line X1="100" Y1="100" X2="300" Y2="100" Stroke="White" StrokeThickness="8"/>
                <Line X1="100" Y1="600" X2="100" Y2="500" Stroke="White" StrokeThickness="8"/>
                <Line X1="300" Y1="600" X2="300" Y2="500" Stroke="White" StrokeThickness="8"/>
                <Line X1="100" Y1="500" X2="300" Y2="500" Stroke="White" StrokeThickness="8"/>
                <Button Command="{Binding SubCommand}" CommandParameter="0" 
                        Height="75" Width="75" Canvas.Bottom="30" Canvas.Right="160" Background="Transparent">
                    <Image Source="{Binding LineUp[0].PlayerImage}"/>
                </Button>
                <Button Command="{Binding SubCommand}" CommandParameter="1" 
                        Height="75" Width="75" Canvas.Bottom="160" Canvas.Left="20" Background="Transparent">
                    <Image Source="{Binding LineUp[1].PlayerImage}"/>
                </Button>
                <Button Command="{Binding SubCommand}" CommandParameter="2" 
                        Height="75" Width="75" Canvas.Bottom="140" Canvas.Left="110" Background="Transparent">
                    <Image Source="{Binding LineUp[2].PlayerImage}"/>
                </Button>
                <Button Command="{Binding SubCommand}" CommandParameter="3" 
                        Height="75" Width="75" Canvas.Bottom="140" Canvas.Right="110" Background="Transparent">
                    <Image Source="{Binding LineUp[3].PlayerImage}"/>
                </Button>
                <Button Command="{Binding SubCommand}" CommandParameter="4" 
                        Height="75" Width="75" Canvas.Bottom="160" Canvas.Right="20" Background="Transparent">
                    <Image Source="{Binding LineUp[4].PlayerImage}"/>
                </Button>
                <Button Command="{Binding SubCommand}" CommandParameter="5" 
                        Height="75" Width="75" Canvas.Top="190" Canvas.Right="40" Background="Transparent">
                    <Image Source="{Binding LineUp[5].PlayerImage}"/>
                </Button>
                <Button Command="{Binding SubCommand}" CommandParameter="6" 
                        Height="75" Width="75" Canvas.Top="270" Canvas.Right="160" Background="Transparent">
                    <Image Source="{Binding LineUp[6].PlayerImage}"/>
                </Button>
                <Button Command="{Binding SubCommand}" CommandParameter="7" 
                        Height="75" Width="75" Canvas.Top="160" Canvas.Right="160" Background="Transparent">
                    <Image Source="{Binding LineUp[7].PlayerImage}"/>
                </Button>
                <Button Command="{Binding SubCommand}" CommandParameter="8" 
                        Height="75" Width="75" Canvas.Top="190" Canvas.Left="40" Background="Transparent">
                    <Image Source="{Binding LineUp[8].PlayerImage}"/>
                </Button>
                <Button Command="{Binding SubCommand}" CommandParameter="9" 
                        Height="75" Width="75" Canvas.Top="50" Canvas.Left="100" Background="Transparent">
                    <Image Source="{Binding LineUp[9].PlayerImage}"/>
                </Button>
                <Button Command="{Binding SubCommand}" CommandParameter="10" 
                        Height="75" Width="75" Canvas.Top="50" Canvas.Right="100" Background="Transparent">
                    <Image Source="{Binding LineUp[10].PlayerImage}"/>
                </Button>
            </Canvas>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="140"/>
                <RowDefinition Height="400"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DataGrid ItemsSource="{Binding SubstitutionList}" SelectedItem="{Binding SelectedSubstitution}"
                      AutoGenerateColumns="False" Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="40">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding PlayerImage}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="aufstellen"
                    Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" Width="100" Height="25"/>
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="300"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DataGrid Grid.Row="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Img" Width="40"></DataGridTextColumn>
                    <DataGridTextColumn Header="Name" Width="235"></DataGridTextColumn>
                    <DataGridTextColumn Header="Punkte" Width="70"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <DataGrid Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Heimteam" Width="140"></DataGridTextColumn>
                    <DataGridTextColumn Header="vs" Width="65"></DataGridTextColumn>
                    <DataGridTextColumn Header="Auswärtsteam" Width="140"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="Nächster Spieltag" 
                    Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="right" Margin="0,0,40,0" 
                    Height="26" Width="120"/>
        </Grid>
    </Grid>
</Window>
