<Window x:Class="FFM_WIFI.Views.GameHomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFM_WIFI.Views"
        mc:Ignorable="d"
        Title="GameWindow" Height="800" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        <Canvas Grid.Column="0" Height="600" Width="400" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Background="LightGreen">
            <Line X1="0" Y1="300" X2="400" Y2="300" Stroke="White" StrokeThickness="8"/>
            <Line X1="100" Y1="0" X2="100" Y2="100" Stroke="White" StrokeThickness="8"/>
            <Line X1="300" Y1="0" X2="300" Y2="100" Stroke="White" StrokeThickness="8"/>
            <Line X1="100" Y1="100" X2="300" Y2="100" Stroke="White" StrokeThickness="8"/>
            <Line X1="100" Y1="600" X2="100" Y2="500" Stroke="White" StrokeThickness="8"/>
            <Line X1="300" Y1="600" X2="300" Y2="500" Stroke="White" StrokeThickness="8"/>
            <Line X1="100" Y1="500" X2="300" Y2="500" Stroke="White" StrokeThickness="8"/>
            <Image Height="75" Width="75" Canvas.Top="50" Canvas.Left="100" Source="{Binding Image}"/>
            <Label Height="25" Width="75" Canvas.Top="125" Canvas.Left="100" Content="{Binding Name}"/>
            <Image Height="75" Width="75" Canvas.Top="50" Canvas.Right="100" Source="{Binding Image}"/>
            <Label Height="25" Width="75" Canvas.Top="125" Canvas.Right="100" Content="{Binding Name}"/>
            <Image Height="75" Width="75" Canvas.Top="160" Canvas.Right="160" Source="{Binding Image}"/>
            <Label Height="25" Width="75" Canvas.Top="235" Canvas.Right="160" Content="{Binding Name}"/>
            <Image Height="75" Width="75" Canvas.Top="270" Canvas.Right="160" Source="{Binding Image}"/>
            <Label Height="25" Width="75" Canvas.Top="345" Canvas.Right="160" Content="{Binding Name}"/>
            <Image Height="75" Width="75" Canvas.Top="190" Canvas.Right="40" Source="{Binding Image}"/>
            <Label Height="25" Width="75" Canvas.Top="265" Canvas.Right="40" Content="{Binding Name}"/>
            <Image Height="75" Width="75" Canvas.Top="190" Canvas.Left="40" Source="{Binding Image}"/>
            <Label Height="25" Width="75" Canvas.Top="265" Canvas.Left="40" Content="{Binding Name}"/>
            <Image Height="75" Width="75" Canvas.Bottom="160" Canvas.Left="20" Source="{Binding Image}"/>
            <Label Height="25" Width="75" Canvas.Bottom="135" Canvas.Left="20" Content="{Binding Name}"/>
            <Image Height="75" Width="75" Canvas.Bottom="160" Canvas.Right="20" Source="{Binding Image}"/>
            <Label Height="25" Width="75" Canvas.Bottom="135" Canvas.Right="20" Content="{Binding Name}"/>
            <Image Height="75" Width="75" Canvas.Bottom="140" Canvas.Right="110" Source="{Binding Image}"/>
            <Label Height="25" Width="75" Canvas.Bottom="115" Canvas.Right="110" Content="{Binding Name}"/>
            <Image Height="75" Width="75" Canvas.Bottom="140" Canvas.Left="110" Source="{Binding Image}"/>
            <Label Height="25" Width="75" Canvas.Bottom="115" Canvas.Left="110" Content="{Binding Name}"/>
            <Image Height="75" Width="75" Canvas.Bottom="30" Canvas.Right="160" Source="{Binding Image}"/>
            <Label Height="25" Width="75" Canvas.Bottom="5" Canvas.Right="160" Content="{Binding Name}"/>
        </Canvas>
        <Label Grid.Column="0" Content="FC Benutzer" HorizontalAlignment="Left" Margin="25,50,0,0" VerticalAlignment="Top" Height="25" Width="150"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="300"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <DataGrid Grid.Row="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Pos" Width="40"></DataGridTextColumn>
                    <DataGridTextColumn Header="Team" Width="235"></DataGridTextColumn>
                    <DataGridTextColumn Header="Punkte" Width="70"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Nächster Spieltag" HorizontalAlignment="Left" Margin="180,0,0,0" Grid.Row="2" VerticalAlignment="Center" Height="26" Width="120"/>
            <DataGrid Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Heimteam" Width="140"></DataGridTextColumn>
                    <DataGridTextColumn Header="vs" Width="65"></DataGridTextColumn>
                    <DataGridTextColumn Header="Auswärtsteam" Width="140"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
