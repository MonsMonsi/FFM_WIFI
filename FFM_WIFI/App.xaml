<Application x:Class="FFM_WIFI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FFM_WIFI.Models.Converters"
             StartupUri="Views\StartWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <local:Resize x:Key="Resize"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Buttons.xaml"/>
                <ResourceDictionary Source="Resources/Borders.xaml"/>
                <ResourceDictionary Source="Resources/DataControls.xaml"/>
                <ResourceDictionary Source="Resources/TextControls.xaml"/>
                <ResourceDictionary Source="Resources/Scrollbars.xaml"/>
                <ResourceDictionary Source="Resources/ComboBoxes.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary> 
    </Application.Resources>
</Application>
