                                       TextWrapping="Wrap"
                                       Padding="0 1 0 0"
                                       FontWeight="DemiBold"
                                       Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Width, Converter={converters:Resize}, ConverterParameter=59}"/>

                            <TextBlock Text="{Binding Points}"
                                       Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       TextWrapping="Wrap"
