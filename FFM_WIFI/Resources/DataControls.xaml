                                       TextWrapping="Wrap"
                                       Padding="0 1 0 0"/>

                            <TextBlock Text="{Binding GoalsAgainst}"
                                       Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       TextWrapping="Wrap"
                                       Padding="0 1 0 0"/>
                            
                            <TextBlock Text="{Binding GoalsDiff}"
                                       Grid.Column="6" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       TextWrapping="Wrap"
                                       Padding="0 1 0 0"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="StandingsListItemBorder" Property="Opacity" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

